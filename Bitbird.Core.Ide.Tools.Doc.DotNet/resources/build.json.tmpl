{
  "build": {
    "content": [
      {
        "files": [ "**.yml", "**.md" ],
        "cwd": "{input}"
      }
    ],
    "resource": [
      {
        "files": [ "**" ],
        "cwd": "{input}",
        "exclude": [ "**.yml", "**.md" ]
      }
    ],
    "globalMetadata": {
      "_appTitle": "{title}",
      "_appFooter": "{footer}",
      "_disableContribution": true
    },
    "dest": "{output}",
    "template": [
      "DocFxTemplate"
    ]
  }
}